    #message {
        color: red;
        font-family: 'Droid Arabic Kufi', sans-serif;
        font-size: 12px;
        font-weight: bold;
    }



    .alert-false {
        padding: 20px;
        padding-top: 5px;
        padding-bottom: 15px;
        background-color: #bd362f;
        color: white;
    }

    .alert-true {
        padding: 20px;
        padding-top: 5px;
        padding-bottom: 15px;
        background-color: #51a351;
        color: white;
    }

    .closebtn {
        margin-right: 15px;
        margin-top: 20px;
        color: white;
        font-weight: bold;
        float: left;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .closebtn:hover {
            color: black;
        }
</style>

@{
    if (ViewBag.Success != null)
    {
        <div class="alert alert-success">
            <h5><strong>@ViewBag.Success</strong></h5>
        </div>
    }
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <h5><strong>@ViewBag.Error</strong></h5>
        </div>
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="hsp-profile-div" dir="rtl" lang="ar">
        <!--الاسم-->
        <div style="text-align:center;">
            <img src="~/Content/images/user2.png" style="height: 120px;width:120px;" />
        </div>
        <br />
        <div>
            <div id="accountinfo"><h2>معلومات الحساب</h2></div>
            <div id="hsp-profile-div-content">
                <div>
                    <div id="info"><h3>@Html.DisplayNameFor(m => m.OldPassword): </h3></div><div id="info">
                        <p>@Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })</p>
                    </div>
                    <div id="message">@Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })</div>
                </div>
                <div>
                    <div id="info"><h3>@Html.DisplayNameFor(m => m.NewPassword): </h3></div><div id="info">
                        <p>@Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })</p>
                    </div>
                    <div id="message">@Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })</div>
                </div>
                <div>
                    <div id="info"><h3>@Html.DisplayNameFor(m => m.ConfirmPassword): </h3></div><div id="info">
                        <p>@Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })</p>
                    </div>
                    <div id="message">@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })</div>
                </div>
                <div>
                    <div id="info"><h3>@Html.DisplayNameFor(m => m.Email): </h3></div><div id="info">
                        <p>@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })</p>
                    </div>
                    <div id="message">@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>
                </div>
                <div>
                    <div id="info"><h3>@Html.DisplayNameFor(m => m.PhoneNumber): </h3></div><div id="info">
                        <p>@Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })</p>
                    </div>
                    <div id="message">@Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })</div>
                </div>
                <div id="update-btn"><input type="submit" value="تحديث" class="btn btn-default" /></div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
