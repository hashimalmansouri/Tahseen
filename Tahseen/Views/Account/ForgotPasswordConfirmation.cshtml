@model Tahseen.Models.ForgotPasswordViewModel


@{
    ViewBag.Title = "استرجاع كلمة المرور";
}

<style>

    /* login page */

    .log {
        width: 100%;
        height: 100%;
        text-align: center;
        background-color: #D9F5D9;
        padding-top: 5%;
        padding-bottom: 5.5%;
    }


        .log h1 {
            font-family: 'Droid Arabic Kufi', sans-serif;
            font-size: 30px;
            color: #696969;
        }

        .log h2 {
            font-family: 'Droid Arabic Kufi', sans-serif;
            color: #696969;
        }


    .container2 {
        position: relative;
        bottom: 0px;
        max-width: 600px;
        margin: 0 auto;
        position: relative;
    }

    form select,
    form input[type="text"],
    form input[type="email"],
    form input[type="password"],
    form input[type="number"],
    input[type="date" i],
    form button[type="submit"] {
        font: 400 12px/16px "Droid Arabic Kufi", sans-serif;
        border-radius: 25px;
    }

    form {
        background: #F9F9F9;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        height: 100%;
        border-radius: 25px;
        display: inline-block;
        width: 100%;
    }


        form fieldset {
            position: relative;
            border: medium none !important;
            margin: 0 0 10px;
            padding: 0;
            text-align: center;
            width: 100%;
        }

        form select,
        form input[type="text"],
        form input[type="email"],
        form input[type="password"],
        form input[type="number"],
        input[type="date" i] {
            width: 300px;
            border: 1px solid #ccc;
            background: #FFF;
            margin: 0 0 5px;
            padding: 10px;
        }


            form select:hover,
            form input[type="text"]:hover,
            form input[type="email"]:hover,
            form input[type="password"]:hover,
            form input[type="number"]:hover,
            input[type="date" i]:hover {
                -webkit-transition: border-color 0.3s ease-in-out;
                -moz-transition: border-color 0.3s ease-in-out;
                transition: border-color 0.3s ease-in-out;
                border: 1px solid #aaa;
            }

        form button[type="submit"] {
            cursor: pointer;
            width: 200px;
            height: 50px;
            border: none;
            background: #5B9969;
            color: #FFF;
            margin: 0 0 5px;
            padding: 10px;
            font-size: 15px;
        }

            form button[type="submit"]:hover {
                background: #43A047;
                -webkit-transition: background 0.3s ease-in-out;
                -moz-transition: background 0.3s ease-in-out;
            }



            form button[type="submit"]:active {
                box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.5);
            }





        form input:focus {
            outline: 0;
            border: 1px solid #aaa;
        }

        form label {
            font-size: 15px;
            font-family: 'Droid Arabic Kufi', sans-serif;
        }

        form a {
            font-size: 15px;
            font-family: 'Droid Arabic Kufi', sans-serif;
        }

            form a:link {
                text-decoration: none;
            }

            form a:visited {
                text-decoration: none;
            }

        form #message {
            color: red;
            font-family: 'Droid Arabic Kufi', sans-serif;
            font-size: 12px;
            font-weight: bold;
        }

    #parent {
        text-align: center;
    }


        #parent #Fname {
            float: right;
            width: 50%;
            margin-bottom: 10px;
        }

        #parent #Lname {
            float: left;
            width: 50%;
            margin-bottom: 10px;
        }

        #parent #Fname input {
            float: left;
            margin-left: 20px;
        }

        #parent #Lname input {
            float: right;
            margin-right: 20px;
        }

        #parent #Fname label {
            float: left;
            margin-left: 70px;
        }

        #parent #Lname label {
            float: right;
            margin-right: 70px;
        }

        #parent #Lname #message {
            float: right;
            margin-right: 60px;
        }


        #parent #Fname #message {
            float: left;
            margin-left: 60px;
        }

    form label a {
        color: red;
    }

    .alert-false {
        padding: 20px;
        padding-top: 5px;
        padding-bottom: 15px;
        background-color: #bd362f;
        color: white;
    }

    .alert-true {
        padding: 20px;
        padding-top: 5px;
        padding-bottom: 15px;
        background-color: #51a351;
        color: white;
    }

    .closebtn {
        margin-right: 15px;
        margin-top: 20px;
        color: white;
        font-weight: bold;
        float: left;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .closebtn:hover {
            color: black;
        }
</style>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <h5>@ViewBag.Error</h5>
    </div>
}
@if (ViewBag.Success != null)
{
    <div class="alert alert-success">
        <h5>@ViewBag.Success</h5>
    </div>
}

<section class="log" dir="rtl" lang="ar">
    <br />
    <div class="container">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post,
            new { @id = "login", role = "form", @style = "border-radius: 25px 25px 0 0" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Email)
            <img src="~/Content/images/padlock.png" width="80" height="80" />
            <h1>استرجاع كلمة المرور</h1>

            <label>
                تحقق من بريدك الإلكتروني واضغط على الرابط المرفق لتحويلك إلى صفحة تعيين كلمة المرور أو
                ادخل رمز التفعيل ادناه لاسترجاع كلمة المرور الخاصة بك.
            </label>
            <br />
            <label>
                إذا لم يظهر في غضون بضع دقائق، فتحقق من مجلد الرسائل غير المرغوب فيها.
            </label>
            <br />
            <div>
                <p>
                    @Html.LabelFor(m => m.Code)
                </p>
                <div id="message">
                    @Html.TextBoxFor(m => m.Code)
                    @Html.ValidationMessage("Code", new { @class = "text-danger" })
                </div>
            </div>
            <fieldset>
                <br /> <br />
                <button name="submit" type="submit" id="submit">تحقق</button>
            </fieldset>
        }
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post,
            new { id = "resend-form", role = "form", @style = "border-radius: 0 0 25px 25px" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Email)
            <button name="submit" type="submit" id="resend">إرسال رمز آخر</button>
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(function () {
        $("#resend").click(function () {
            $("#resend-form").submit();
        });
    });
    </script>
}
