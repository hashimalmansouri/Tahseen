<style>
    .social {
        position: fixed;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
    }

        .social ul {
            margin: 0;
            padding: 0;
        }

            .social ul li {
                list-style: none;
                margin: 5px 0;
            }

                .social ul li div {
                    width: 50px;
                    height: 50px;
                    line-height: 50px;
                    font-size: 25px;
                    color: #fff;
                    background: #04AA6D;
                    display: block;
                    text-align: center;
                    position: relative;
                }

                    .social ul li div span {
                        position: absolute;
                        top: 0;
                        left: -120;
                        width: 200px;
                        height: 50px;
                        background: white;
                        font-size: 15px;
                        z-index: -1;
                        font-family: Arial;
                        opacity: 0;
                        color: #025738;
                        box-shadow: 5px 10px 8px #ddd;
                        backface-visibility: hidden;
                        transition: 0.5s;
                    }

                .social ul li:hover span {
                    opacity: 1;
                    backface-visibility: visible;
                    left: 50px;
                }



    .mySlides {
        display: none;
    }

    img {
        vertical-align: middle;
    }

    /* Slideshow container */
    .slideshow-container {
        max-width: 1000px;
        position: relative;
        margin: auto;
        box-sizing: border-box;
    }

    /* Caption text */
    .text {
        color: black;
        font-size: 35px;
        padding: 230px 12px;
        position: absolute;
        bottom: 8px;
        width: 100%;
        font-family: 'Droid Arabic Kufi', sans-serif;
        text-align: center;
    }

    /* The dots/bullets/indicators */
    .dot {
        height: 15px;
        width: 15px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

    .active {
        background-color: #717171;
    }

    /* Fading animation */
    .fade {
        animation-name: fade;
        animation-duration: 1.5s;
    }

    .details {
        color: black;
        font-size: 25px;
        padding: 170px 12px;
        position: absolute;
        bottom: 8px;
        width: 100%;
        font-family: 'Droid Arabic Kufi', sans-serif;
        text-align: center;
    }

    @@keyframes fade {
        from {
            opacity: .4
        }

        to {
            opacity: 1
        }
    }

    /* On smaller screens, decrease text size */
    @@media only screen and (max-width: 300px) {
        .text {
            font-size: 11px
        }
    }
</style>


