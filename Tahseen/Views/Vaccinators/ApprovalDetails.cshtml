@model Tahseen.Models.Approval
@using Tahseen.Models.Enums
@{
    ViewBag.Title = "الموافقات";
}

<!--صفحة لعرض الموافقة لكل طفل-->


<style>

    /* login page */

    .log {
        width: 100%;
        height: 100%;
        text-align: center;
        background-color: #D9F5D9;
        padding-top: 5%;
        padding-bottom: 5.5%;
    }


        .log h1 {
            font-family: 'Droid Arabic Kufi', sans-serif;
            font-size: 30px;
            color: #696969;
        }

        .log h2 {
            font-family: 'Droid Arabic Kufi', sans-serif;
            color: #696969;
            font-size: 16px;
        }


    .container2 {
        position: relative;
        bottom: 0px;
        max-width: 600px;
        margin: 0 auto;
        position: relative;
    }

    .form-approval input[type="text"],
    .form-approval input[type="password"],
    .form-approval input[type="number"],
    input[type="date" i],
    .form-approval button[type="submit"] {
        font: 500 14px/16px "Droid Arabic Kufi", sans-serif;
        border-radius: 25px;
        text-align: center;
    }

    .form-approval {
        background: #F9F9F9;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        height: 100%;
        border-radius: 25px;
        display: inline-block;
        width: 100%;
        position: relative;
    }


        .form-approval fieldset {
            position: relative;
            border: medium none !important;
            margin: 0 0 10px;
            padding: 0;
            text-align: center;
            width: 100%;
        }




    input:hover {
        -webkit-transition: border-color 0.3s ease-in-out;
        -moz-transition: border-color 0.3s ease-in-out;
        transition: border-color 0.3s ease-in-out;
        border: 1px solid #aaa;
    }

    form button[type="submit"] {
        cursor: pointer;
        width: 150px;
        height: 40px;
        border: none;
        background: #5B9969;
        color: #FFF;
        margin: 0 0 5px;
        padding: 10px;
        font-size: 15px;
        position: relative;
    }

    .form-approval button[type="submit"]:hover {
        background: #43A047;
        -webkit-transition: background 0.3s ease-in-out;
        -moz-transition: background 0.3s ease-in-out;
    }



    .form-approval button[type="submit"]:active {
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.5);
    }

    .form-approval input:focus {
        outline: 0;
        border: 1px solid #aaa;
    }

    .form-approval label {
        font-size: 12px;
        font-family: 'Droid Arabic Kufi', sans-serif;
    }

    form a {
        font-size: 15px;
        font-family: 'Droid Arabic Kufi', sans-serif;
    }

    .form-approval a:link {
        text-decoration: none;
    }

    .form-approval a:visited {
        text-decoration: none;
    }

    .form-approval #message {
        color: red;
        font-family: 'Droid Arabic Kufi', sans-serif;
        font-size: 12px;
        font-weight: bold;
        position: relative;
        margin-left: auto;
        margin-right: auto;
    }



    .form-approval label a {
        color: red;
    }

    .alert-false {
        padding: 20px;
        padding-top: 5px;
        padding-bottom: 15px;
        background-color: #bd362f;
        color: white;
    }

    .alert-true {
        padding: 20px;
        padding-top: 5px;
        padding-bottom: 15px;
        background-color: #51a351;
        color: white;
    }

    .closebtn {
        margin-right: 15px;
        margin-top: 20px;
        color: white;
        font-weight: bold;
        float: left;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .closebtn:hover {
            color: black;
        }

    table td input {
        width: 120px;
        font: 400 12px/16px "Droid Arabic Kufi", sans-serif;
        border-radius: 25px;
        border: 1px solid #ccc;
        background: #FFF;
        height: 30px;
    }

    table td label {
        position: relative;
    }

    #vaccineName, #doseNum {
        width: 120px;
        font: 500 14px/16px "Droid Arabic Kufi", sans-serif;
        border-radius: 25px;
        border: 1px solid #ccc;
        background: #FFF;
        height: 30px;
        text-align: center;
    }

    #addres {
        width: 180px;
        height: 50px;
        border-radius: 25px;
        border: 1px solid #ccc;
        background: #FFF;
        height: 30px;
    }

    table {
        width: 100%;
        font-family: 'Droid Arabic Kufi', sans-serif;
    }

    .Register {
        background-color: #5B9969;
        border-radius: 20px;
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
        padding-top: 5px;
        padding-bottom: 5px;
        padding-left: 10px;
        padding-right: 10px;
        font-family: 'Droid Arabic Kufi', sans-serif;
        font-size: 16px;
        color: white;
        text-align: center;
    }

        .Register a {
            color: white;
        }

        .Register:hover {
            background: #43A047;
            -webkit-transition: background 0.3s ease-in-out;
            -moz-transition: background 0.3s ease-in-out;
        }

    #info {
        display: inline-block;
        font-size: 16px;
    }

    h2 {
        padding-left: 20px;
    }
</style>


<section class="log" dir="rtl" lang="ar">
    <br />
    <div class="container2">
        <form id="login" class="form-approval">
            <br />
            <h1>تمت الموافقة على:</h1>
            <br />
            <div>
                <div id="info"><h2>إعطاء الطفل: </h2></div><div id="info"><p>@Html.DisplayFor(x => x.Child.FullName)</p></div>
            </div>
            <div>
                <div id="info"><h2>صاحب الهوية / الإقامة:</h2></div><div id="info"><p>@Html.DisplayFor(x => x.ChildNationalID)</p></div>
            </div>
            <div>
                <div id="info"><h2>التطعيم:</h2></div><div id="info"><p>@Model.VaccineType.GetDisplayName()</p></div>
            </div>
            <br />
            <br />
            <div style="width: 100%;">
                <div class="Register"><a href="@Url.Action("RegisterVaccination", new { childId = Model.ChildNationalID, approvalId = Model.ApprovalId })">تسجيل تطعيم</a></div>
            </div>
            <br />
            <br />
        </form>
    </div>
</section>
