@model Tahseen.Models.ChildHealth

@{
    ViewBag.Title = "العلامات الحيويه ";
}

<style>
    /* login page */
    .log {
        width: 100%;
        height: 100%;
        text-align: center;
        background-color: #D9F5D9;
        padding-top: 5%;
        padding-bottom: 5.5%;
    }


        .log h1 {
            font-family: 'Droid Arabic Kufi', sans-serif;
            font-size: 30px;
            color: #696969;
        }

        .log h2 {
            font-family: 'Droid Arabic Kufi', sans-serif;
            color: #696969;
            font-size: 16px;
        }

    .form-update input[type="number"],
    .form-update input[type="text"] {
        width: 90px;
    }

    .container2 {
        position: relative;
        bottom: 0px;
        max-width: 600px;
        margin: 0 auto;
        position: relative;
    }

    .form-update input[type="text"],
    .form-update input[type="password"],
    .form-update input[type="number"],
    input[type="date" i],
    .form-update button[type="submit"] {
        font-family: "Droid Arabic Kufi", sans-serif;
        font-size: 14px;
        border-radius: 25px;
        text-align: center;
    }

    .form-update {
        background: #F9F9F9;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        height: 100%;
        border-radius: 25px;
        display: inline-block;
        width: 41%;
        position: relative;
    }


        .form-update fieldset {
            position: relative;
            border: medium none !important;
            margin: 0 0 10px;
            padding: 0;
            text-align: center;
            width: 100%;
        }




    input:hover {
        -webkit-transition: border-color 0.3s ease-in-out;
        -moz-transition: border-color 0.3s ease-in-out;
        transition: border-color 0.3s ease-in-out;
        border: 1px solid #aaa;
    }

    .form-update button[type="submit"] {
        cursor: pointer;
        width: 150px;
        height: 40px;
        border: none;
        background: #5B9969;
        color: #FFF;
        margin: 0 0 5px;
        padding: 10px;
        font-size: 15px;
        position: relative;
    }

        .form-update button[type="submit"]:hover {
            background: #43A047;
            -webkit-transition: background 0.3s ease-in-out;
            -moz-transition: background 0.3s ease-in-out;
        }



        .form-update button[type="submit"]:active {
            box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.5);
        }

    .form-update input:focus {
        outline: 0;
        border: 1px solid #aaa;
    }

    .form-update label {
        font-size: 12px;
        font-family: 'Droid Arabic Kufi', sans-serif;
    }

    .form-update a {
        font-size: 15px;
        font-family: 'Droid Arabic Kufi', sans-serif;
    }

        .form-update a:link {
            text-decoration: none;
        }

        .form-update a:visited {
            text-decoration: none;
        }

    .form-update #message {
        color: red;
        font-family: 'Droid Arabic Kufi', sans-serif;
        font-size: 12px;
        font-weight: bold;
        position: relative;
        margin-left: auto;
        margin-right: auto;
    }



    .form-update label a {
        color: red;
    }

    .alert-false {
        padding: 20px;
        padding-top: 5px;
        padding-bottom: 15px;
        background-color: #bd362f;
        color: white;
    }

    .alert-true {
        padding: 20px;
        padding-top: 5px;
        padding-bottom: 15px;
        background-color: #51a351;
        color: white;
    }

    .closebtn {
        margin-right: 15px;
        margin-top: 20px;
        color: white;
        font-weight: bold;
        float: left;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .closebtn:hover {
            color: black;
        }

    table td input {
        width: 120px;
        font: 400 12px/16px "Droid Arabic Kufi", sans-serif;
        border-radius: 25px;
        border: 1px solid #ccc;
        background: #FFF;
        height: 30px;
    }

    table td label {
        position: relative;
    }

    #vaccineType {
        width: 100%;
        font: 500 14px/16px "Droid Arabic Kufi", sans-serif;
        border-radius: 25px;
        border: 1px solid #ccc;
        background: #FFF;
        height: 30px;
        text-align: center;
    }

    #addres {
        width: 180px;
        height: 50px;
        border-radius: 25px;
        border: 1px solid #ccc;
        background: #FFF;
        height: 30px;
    }

    table {
        width: 100%;
    }

    .inline {
        display: inline-block;
    }
</style>


@{
    if (ViewBag.Success != null)
    {
        <div class="alert alert-success">
            <h5><strong>@ViewBag.Success</strong></h5>
        </div>
    }
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <h5><strong>@ViewBag.Error</strong></h5>
        </div>
    }
}

<section class="log" dir="rtl" lang="ar">
    @using (Html.BeginForm("UpdateHealth", "Doctors", FormMethod.Post, new { @id = "login", @class = "form-update" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <br />
        <br />
        <br />
        @Html.HiddenFor(model => model.ChildNationalID)
        <div>
            <h1>@ViewBag.ChildName</h1>
            <div>
                <div class="inline"><h2> الوزن:</h2></div>
                <div class="inline">
                    <div id="pass">
                        @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div id="message">
                        @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div>
                <div class="inline"><h2>الطول :</h2></div>
                <div class="inline">
                    <div id="pass">
                        @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div id="message">
                        @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div>
                <div class="inline"><h2>درجه الحراره :</h2></div>
                <div class="inline">
                    <div id="pass">
                        @Html.EditorFor(model => model.Temperature, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div id="message">
                        @Html.ValidationMessageFor(model => model.Temperature, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div>
                <div class="inline"><h2> محيط الراس:</h2></div>
                <div class="inline">
                    <div id="pass">
                        @Html.EditorFor(model => model.HeadCirumference, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div id="message">
                        @Html.ValidationMessageFor(model => model.HeadCirumference, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <br />
            <button name="submit" type="submit" id="submit">تحديث</button>
            <br />
            <br />
            <br />
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
